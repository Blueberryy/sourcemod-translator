<div class="user-flair media gray">
  <%= link_to image_tag( flair_avatar(user.avatar_url), :size => "32x32", :class => "media-object"), user, :class => "pull-left" %>
  <div class="media-body">
    <h4 class="media-heading" title="<%= user.name %>"><%= link_to user.name, user %></h4>
    <p>
      <strong title="Translations"><%= flair_rep user.translations.web.size %></strong>
      <span title="Plugins"><i class="icon-th-large"></i><%= flair_counts user.sourcemod_plugins.count %></span>
      <span title="Languages"><i class="icon-globe"></i><%= user.languages.size %></span>
    </p>
  </div>
</div>