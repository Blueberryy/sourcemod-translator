<% title "Plugins" %>
<% content_for :page_heading do %>
  <h1>Plugins</h1>
<% end %>

<table class="table table-bordered table-striped table-condensed">
  <thead>
    <tr>
        <th>Name</th>
        <th># Phrases</th>
    </tr>
  </thead>

  <tbody>
    <%= content_tag_for(:tr, @sourcemod_plugins) do |sourcemod_plugin| %>
        <td><%= link_to sourcemod_plugin.name, sourcemod_plugin %></td>
        <td><%= sourcemod_plugin.phrases.count %></td>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Sourcemod plugin', new_sourcemod_plugin_path %>
