<%= form_for(@sourcemod_plugin, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @sourcemod_plugin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sourcemod_plugin.errors.count, "error") %> prohibited this sourcemod_plugin from being saved:</h2>

      <ul>
      <% @sourcemod_plugin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="control-group">
  <%= f.label :name, :class => "control-label" %>
  <div class="controls">
    <%= f.text_field :name %>
  </div>
</div>
<div class="control-group">
  <%= f.label :filename, :class => "control-label" %>
  <div class="controls">
    <div class="input-append">
    <%= f.text_field :filename %>
    <span class="add-on">.phrases.txt</span>
    </div>
    <span class="help-block">This is the filename part of your plugin. All phrase files will be prepended with this.</span>
  </div>
</div>
<div class="control-group">
  <%= f.label :tag_list, :class => "control-label" %>
  <div class="controls">
    <%= f.text_field :tag_list, data: {'all-tags' => Tag.order("name ASC").collect{|x|x.name}.join(",")} %>
  </div>
</div>
<div class="control-group">
  <div class="controls">
  <% if @sourcemod_plugin.new_record? %>
    <%= f.submit "Create Plugin", :class => "btn btn-primary" %>
    <%= link_to "Cancel", sourcemod_plugins_path, :class => "btn" %>
  <% else %>
    <%= f.submit "Update Plugin", :class => "btn btn-primary" %>
    <%= link_to "Cancel", @sourcemod_plugin, :class => "btn" %>
  <% end %>
  </div>
</div>
<% end %>
