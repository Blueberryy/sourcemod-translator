<h1>Listing translations</h1>

<table>
  <thead>
    <tr>
        <th>Phrase</th>
        <th>Language</th>
        <th>User</th>
        <th>Text</th>
        <th>Votes count</th>
        <th>Translation flags count</th>
        <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <%= content_tag_for(:tr, @translations) do |translation| %>
        <td><%= translation.phrase_id %></td>
        <td><%= translation.language_id %></td>
        <td><%= translation.user_id %></td>
        <td><%= translation.text %></td>
        <td><%= translation.votes_count %></td>
        <td><%= translation.translation_flags_count %></td>
        <td><%= link_to 'Show', translation %></td>
      <td><%= link_to 'Edit', edit_translation_path(translation) %></td>
      <td><%= link_to 'Destroy', translation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tbody>
</table>

<br />

